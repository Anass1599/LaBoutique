{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} | La boutique{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-5">
            <img src="{{ asset('/uploads/'~product.illustration) }}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <span class="product-price">{{ (product.price/100)|number_format(2, ',', '.') }} â‚¬</span>
            <hr/>
            <p>{{ product.description }}</p>
            <a href="{{ path('add_to_cart', { 'id' : product.id }) }}" class="btn btn-outline-dark">Ajouter au panier</a>
        </div>
    </div>
{% endblock %}